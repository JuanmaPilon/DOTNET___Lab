@inherits LayoutComponentBase
@inject UserSessionService UserSessionService
@inject NavigationManager Navigation
@using Lab.Components.Pages
@using Lab.Components

<div class="main-content">
<div class="d-flex flex-column min-vh-100">
    <NavMenu /> <!-- Menú de navegación (NavMenu.razor) -->

    <main class="flex-grow-1">
        <Header /> <!-- Encabezado común -->
        <article class="content px-4">
            @Body <!-- Aquí se renderiza el contenido de cada página -->
        </article>
    </main>

    <footer class="text-center py-1 bg-light text-muted small">
        <p class="mb-0">© 2024 .NET</p>
    </footer>
</div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

